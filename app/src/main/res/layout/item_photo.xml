<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/m_root_layout"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/padding_small">
    <ImageView
        android:id="@+id/image_view"
        android:layout_width="@dimen/icon_status"
        android:layout_height="@dimen/icon_status"
        android:layout_marginEnd="@dimen/padding_medium"
        android:layout_marginRight="@dimen/padding_medium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/m_txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LA13771238"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/m_txt_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prilaku - Elektrikal - Mekanikal"
            android:textSize="@dimen/text_medium" />

        <TextView
            android:id="@+id/m_txt_deskripsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_small"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Terjadi kecelakaan kerja ketika akan melakukan perbaikan pipa bawah tanah yang menghubungkan tiap unit."
            android:textSize="@dimen/text_medium" />

    </LinearLayout>

</LinearLayout>